<div class="card" style="width: 18rem;">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Carrito</li>
    <li class="list-group-item">
        <% @carro.productos.each do |producto_en_carrito| %>
        <div class="row">
            <div class="col-3">
                <h3> <%= image_tag producto_en_carrito.imagenes.first, class: 'w-100' %>
            </div>
            <div class="col-3">
                <h4><%= producto_en_carrito.nombre %></h4>
                <p><%= producto_en_carrito.descripcion %></p>
                <p><%= producto_en_carrito.categoria.categoria %></p>
            </div>
            <div class="col-3 text-center">
                <%= producto_en_carrito.precio %>
            </div>
    </li>
    
    <li class="list-group-item text-end">
    <strong>
    Subtotal: <%= carro.total %></li>
    </strong>
  </ul>
</div>